int flippingMatrix(vector<vector<int>> matrix) {
    int size = matrix.size();   
    int n = size / 2;
    long long sum = 0;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            int a = matrix[i][j];
            int b = matrix[i][size - 1 - j];
            int c = matrix[size - 1 - i][j];
            int d = matrix[size - 1 - i][size - 1 - j];
            sum += max({a, b, c, d});
        }
    }
    return (int)sum;
}
